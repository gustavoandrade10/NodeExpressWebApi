{
    "compilerOptions": {
        "outDir": "./build/",
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "pretty": true,
        "lib": ["es2017"],
        "allowJs": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}