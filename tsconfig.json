{
    "compilerOptions": {
        "outDir": "./temp/",
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "strictNullChecks": true,
        "lib": ["ES2017", "ES2015"],
        "allowJs": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
    },
    "include": [
        "./src/**/*",
        "./*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
} 